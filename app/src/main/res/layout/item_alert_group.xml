<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Group Header -->
        <LinearLayout
            android:id="@+id/layoutGroupHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textGroupTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alert Group"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textGroupLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/textGroupCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 alerts"
                    android:textSize="12sp"
                    android:textColor="@color/primary_color"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageExpandCollapse"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_expand_more"
                android:contentDescription="Expand/Collapse" />

        </LinearLayout>

        <!-- Alerts List (expandable) -->
        <LinearLayout
            android:id="@+id/layoutAlertsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Individual alerts will be added here dynamically -->

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
